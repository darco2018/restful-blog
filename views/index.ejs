<% blogs.forEach((blog)=>{ %>
<div class="ui container text segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rouded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.date.toDateString() %></span>
                <div class="description">
                    <p><%- blog.body > 100 ? blog.body.substring(0, 99) : blog.body %>...
                        <span><a href="/blogs/<%= blog._id %>">Read more</a></span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<% }) %>
