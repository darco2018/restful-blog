<% include ./partials/header %>

<div class="ui container main text segment">
    <div class="ui huge header">New post</div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" required>
        </div>
        <div class="field">
            <label>Image url</label>
            <input type="text" name="blog[image]" placeholder="image url">
        </div>
        <div class="field">
            <label>Post content</label>
            <textarea name="blog[body]" placeholder="blog text here" required></textarea>
        </div>
        <button class="ui basic green button" type="submit">Add post</button>
    </form>
</div>

<% include ./partials/footer %>