<% include ./partials/header %>

<div class="ui container main text segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui rouded image" src="<%= blog.image %>">
            <div class="content">
                <!-- moment.js will give you more possibilites of formatting -->
                <span><%= blog.date.toDateString() %></span>
                <div class="description">
                    <!-- dash below enables not escaped text = html -->
                    <p><%- blog.body %></p>
                </div>
            </div>
        </div>
    </div>
</div>


<% include ./partials/footer %>